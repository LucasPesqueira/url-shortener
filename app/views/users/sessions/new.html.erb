<div class="form-container">
  <h2>Entrar</h2>

  <hr/>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>

    <div class="fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Enviar", class: 'submit' %>
    </div>
  <% end %>
</div>

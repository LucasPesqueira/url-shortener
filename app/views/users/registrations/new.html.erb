<div class="form-container">
  <h2>Cadastrar</h2>

  <hr/>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Senha (MÃ­nimo 6 caracteres)' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'ConfirmaÃ§Ã£o de senha' %>
      </div>

      <%= link_to 'entrar', new_user_session_path, class: 'nav-link' %>
    </div>

    <div class="actions">
      <%= f.submit "Enviar", class: 'submit' %>
    </div>
  <% end %>
</div>
